<%-include('../partials/userheader.ejs')%>

<div class ="container">
    <div class ="row text-center">
        <div class ="col-md-12">
            <h1><u>Notifications</u></h1>
        </div>
    </div>
</div>
<br><br>
<div class ="container">
    <%if(user.notification.length==0){%>
        <div style ="height:60vh"><h3 class ="text-center" style ="color:green">No notifications</h3>
        </div>
        <%}else{%>
            <div style ="height:70vh">
    <ul style ="list-style:none;">
   <%user.notification.forEach((data)=>{%>
        <li style ="border:1px solid green; border-radius:10px;padding: 20px 5px 5px 10px;margin-bottom:20px;">
            <p style ="color:green"><i class ="fa fa-circle"></i>&nbsp;&nbsp;<%=data.message%></p>
        </li>
   <%})%>
    </div>
   <%}%>
    </ul>
</div>
<%-include('../partials/footer.ejs')%>