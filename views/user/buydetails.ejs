<%- include('../partials/userheader.ejs')%>

<style>
    table{
        width:100%;
    }
    th,td{
        padding:10px;
    }
    p{
        font-size:18px;
    }
</style>
<div class ="container-fluid">
    <div class ="row text-center">
        <div class ="col-md-12">
            <h1><u>Buy Detail</u></h1>
        </div>
    </div>
</div>

<div class ="container-fluid">
    <div class ="row text-center">
        <div class ="col-sm-12">
            <div class ="thumbnail">
                <img src ="/uploads/<%=product.image%>" style ="width:400px;height:400px;">
            </div>
        </div>
    </div><hr>
    <div class ="row ">
        <div class ="col-md-4"></div>
        <div class ="col-md-6 col-sm-12">
            <table>
                <tr>
                    <th>
                        Name  :
                    </th>
                    <th>
                        <p><%=product.name%></p>
                    </th>
                </tr>
                <tr>
                    <th>
                        Category  :
                    </th>
                    <th>
                        <p><%=product.category%></p>
                    </th>
                </tr>
                <tr>
                    <th>
                        Description  :
                    </th>
                    <th>
                        <p><%=product.description%></p>
                    </th>
                </tr>
                <tr>
                    <th>
                        Price  :
                    </th>
                    <th>
                        <p>&#8377; <%=product.price%></p>
                    </th>
                </tr>
                <tr>
                    <th>
                        Seller's Name  :
                    </th>
                    <th>
                        <p><%=seller.first%></p>
                    </th>
                </tr>
                <tr>
                    <th>
                        Seller's email  :
                    </th>
                    <th>
                        <p><%=seller.email%></p>
                    </th>
                </tr>
                <tr>
                    <th>
                        Seller's mobile  :
                    </th>
                    <th>
                        <p><%=seller.mobile%></p>
                    </th>
                </tr>
                <tr>
                    <th>
                        Seller's Address   :
                    </th>
                    <th>
                        <p><%=seller.address%></p>
                    </th>
                </tr>
            </table>
        </div>
    </div>
    <div class ="jumbotron text-center">
        <h2 style ="color:green">Thanks For Purchasing !</h2><br>
        <a href ="/User/user"><button class ="btn btn-outline-warning">Continue Shopping</button></a>
    </div>
</div>
<%- include('../partials/footer.ejs')%>