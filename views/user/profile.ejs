<%- include('../partials/userheader.ejs') %>
<script src ="/js/jquery.js" type ="text/javascript"></script>
<style>
    a{
      text-decoration: none;
      color:#413e66;
    }
    a:hover{
      text-decoration: none;
    }
    .card .thumbnail:hover{
      transform: scale(1.05);
      transition: ease-in .3s;
    }
    div{
      text-transform: capitalize;
    }

    .details{
        font-size: 25px;
        color:#413e66;
        margin-top:8%;
    }
    .card{
        margin:10px;
        padding:10px;
    }
    .jumbotron{
        background-image:url(/images/banner13.jpg);
        background-repeat: no-repeat;
        background-size: cover;
        padding-left:5%;
    }
    .add{
        display:none;
    }
</style>
<div class ="container">
    <div class ="row text-center">
        <div class ="col-md-12 col-sm-12">
            <h1 id ="profilehead"><u>Personal Details</u></h1>
        </div>
    </div>
</div>
<div class ="container">
    <div class ="row ">
        <div class ="col-md-12 col-sm-12">
            <div class ="jumbotron">
                <div class ="row">
                    <div class ="col-md-4 col-sm-12">
                        <img src ="/uploads/<%=user[0].image%>" style ="width:270px;height:270px;border-radius:50%;border:2px solid #fff">
                    </div>
                    <div class ="col-md-1 col-sm-12"></div>
                    <div class ="col-md-6 col-sm-12">
                        <div class ="details">
                            <h1><strong><%=user[0].first%>&nbsp;&nbsp;<%=user[0].last%></strong></h1>
                            <p><i class ="fa fa-mobile"></i>&nbsp;&nbsp;<%=user[0].mobile%></p>
                            <p><i class ="fa fa-envelope"></i>&nbsp;&nbsp;<%=user[0].email%></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class ="container">
    <div class ="row">
        <div class ="col-md-6 col-sm-12">
            <div class ="card">
                <h4>My Orders</h4><hr>
                <a href ="/User/user/myorders/<%=currentUser%>">View Details</a>
            </div>
        </div>
        <div class ="col-md-6 col-sm-12">
            <div class ="card">
                <h4>Products Uploaded</h4><hr>
                <a href ="/User/user/uploadedproduct/<%=currentUser%>">View Details</a>
            </div>
        </div>
        <div class ="col-md-6 col-sm-12">
            <div class ="card">
                <h4>View Cart</h4><hr>
                <p><b>Total items in cart : <%=user[0].cart.length%></b></p>
                <a href ="/User/user/cartdetails/<%=user[0]._id%>">Open Cart</a>
            </div>
        </div>
        <div class ="col-md-6 col-sm-12">
            <div class ="card">
                <h4>My Address
                    <div style ="float:right">
                        <button class ="btn btn-outline-primary" id ="add_address" style ="width:auto;">
                            Add Address
                        </button>
                    </div>
                </h4>
                <form action ="/User/user/add_address/<%=user[0]._id%>" method ="POST" class ="add"id ="add_form">
                   <div class ="form-group"><input type ="text" placeholder ="Address" name ="address" class ="form-control"></div>
                   <div class ="form-group"><input type ="submit" class ="btn btn-outline-warning"></div>
                </form>
                <hr>
                <%=user[0].address%>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function(){

        $("#add_address").click(function(){
        $("#add_form").toggleClass("add");
});

    })
</script>
<%-include('../partials/footer.ejs')%>