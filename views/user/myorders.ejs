<%-include('../partials/userheader.ejs')%>

<div class ="container">
    <div class ="row text-center">
        <div class ="col-md-12">
            <h1><u>My Orders</u></h1>
        </div>
    </div>
</div><br><br>
<div class ="container">
   <%if(user.orders.length==0){%>
    <div class ="jumbotron text-center"><h4>No Orders.Place your first order.</h4></div>
    <%}else{%>
        <%user.orders.forEach((data)=>{%>

            <div class ="row">
                <div class ="col-md-4">
                    <div class ="thumbnail">
                        <img src ="/uploads/<%=data.image%>" style="width:300px;height:300px">
                    </div>
                </div>
                <div class ="col-md-8">
                    <div class ="jumbotron">
                        <h3><u><%=data.name%></u></h3>
                        <h5>Category : <%=data.category%></h5>
                        <h5> Seller Email : <%=data.owner%></h5>
                        <h5>Price : &#8377; <%=data.price%></h5>
                    </div>
                </div>
            </div>
            <hr>
        <%})%>
        <%}%>

</div>
<%-include('../partials/footer.ejs')%>